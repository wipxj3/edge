<div class="signing-bg">
  <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    <div class="panel panel-default login-panel">
    <% if flash[:alert] %>
        <div class="alert alert-danger" role="alert"><%= flash[:alert] %></div>
    <% end %>

    <%= simple_form_for @track do |form| %>
        <%= form.input  :number, :placeholder => "Insert tracking number"  %>
        <%= form.button :submit, class: 'btn btn-success btn-xm' %>
        <%= link_to(tracks_path, class: 'btn btn-info btn-xm pull-right') do %>
          Back
        <% end %>
    <% end %>
  </div>
</div>
</div>

<%= render "shared/footer" %>
